<h1>Photos</h1>

<% if current_user == nil || current_user.id != @user.id%>
<% @photos.each do |photo| %>
  <%= link_to (image_tag (photo.avatar.url(:thumb))), user_photo_path(@user, photo) %>
<% end %>
<br />
<% elsif current_user.id == @user.id %>
<% @photos.each do |photo| %>
  <%= link_to (image_tag (photo.avatar.url(:thumb))), user_photo_path(@user, photo) %>
<% end %>
<br />
  <%= link_to 'New', new_user_photo_path(@user) %>
<% end %>
